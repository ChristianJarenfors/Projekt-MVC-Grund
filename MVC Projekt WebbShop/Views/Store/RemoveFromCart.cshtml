@model MVC_Projekt_WebbShop.Models.ShoppingItem

@{
    ViewBag.Title = "RemoveFromCart";
}

<h2>RemoveFromCart</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>ShoppingItem</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Antal)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Antal)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Sum)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Sum)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="number" name="Antal" value="@Html.DisplayFor(model => model.Antal)" />
            <input name="Remove" type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to Cart", "StoreIndex")
        </div>
    }
