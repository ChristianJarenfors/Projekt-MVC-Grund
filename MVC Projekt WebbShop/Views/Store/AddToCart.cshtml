@model IEnumerable<MVC_Projekt_WebbShop.Models.ShoppingItem>

@{
    ViewBag.Title = "AddToCart";
}

<h2>Shopping Bag</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Antal)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Product.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Product.PictureURL)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Product.Price)
        </th>
      
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
           
            @Html.DisplayFor(modelItem => item.Antal)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Product.Name)
        </td>
       
        <td>
            <img src="@Url.Content(item.Product.PictureURL)" alt="Nada" />

        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Sum)
        </td>
        <td>
            @Html.ActionLink("Back To List", "StoreIndex", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Remove", "RemoveFromCart", new { id=item.Id })
        </td>
    </tr>
}

</table>
